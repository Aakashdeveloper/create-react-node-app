{
  "name": "create-react-node-app",
  "version": "0.0.0-development",
  "keywords": [
    "build-tools",
    "create-react-app",
    "node",
    "react",
    "zero-configuration"
  ],
  "homepage": "https://saiichihashimoto.github.io/create-react-node-app/",
  "bugs": {
    "url": "https://github.com/saiichihashimoto/create-react-node-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saiichihashimoto/create-react-node-app.git"
  },
  "license": "MIT",
  "files": [
    "lib"
  ],
  "bin": {
    "react-node-scripts": "./lib/react-node-scripts.js"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps --delete-dir-on-start --verbose --ignore \"**/*.spec.js\" && cp src/*.json lib && cp src/Procfile lib",
    "test": "if [ -z \"$CI\" ]; then jest --watch; else jest --color --coverage; fi",
    "test-build": "npm run build && cd test && npm ci && npm run build && npm run test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "saiichihashimoto"
  },
  "stylelint": {
    "extends": "stylelint-config-saiichihashimoto"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "babel-plugin-css-modules-transform": "1.6.2",
    "babel-plugin-extension-resolver": "github:GingerBear/babel-plugin-extension-resolver#03616d48fe9542a3e92bbb25c17c4f0437fe10cd",
    "babel-plugin-transform-assets": "1.0.2",
    "babel-plugin-transform-dynamic-import": "2.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "babel-plugin-universal-dotenv": "1.1.0",
    "commander": "2.19.0",
    "cross-env": "5.2.0",
    "execa": "1.0.0",
    "foreman": "3.0.1",
    "listr": "0.14.3",
    "mongodb-prebuilt": "6.5.0",
    "nodemon": "1.18.10",
    "react-scripts": "2.1.4"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "eslint-config-saiichihashimoto": "1.0.7",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-my-app": "3.2.2",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "stylelint-config-saiichihashimoto": "1.0.6"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
