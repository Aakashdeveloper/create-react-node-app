root=$(npm explore create-react-node-app -- pwd)

if [ "$1" == "build" ]
then
	cross-env NODE_ENV=production babel src --out-dir lib --config-file=$root/babel.config.js --no-babelrc --source-maps --delete-dir-on-start --verbose
	exit $?
elif [ "$1" == "start" ]
then
	nodemon src --exec "babel-node --config-file=$root/babel.config.js --no-babelrc" --config $root/nodemon.json
	exit $?
fi

